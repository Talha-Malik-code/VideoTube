{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react", // Or "preserve" if you're not transpiling JSX with TypeScript
    "module": "esnext", // Or "commonjs" depending on your module system
    "target": "esnext", // Or "es2015", "es2016", etc., based on your target environment
    "allowJs": true, // Essential: Allows JavaScript files to be part of the project
    "noEmit": true, // Don't emit any output JavaScript files (since you're already using JS)
    "checkJs": false // Explicitly disables type checking for JavaScript files
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}